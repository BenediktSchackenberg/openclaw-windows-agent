<UserControl x:Class="OpenClawAgent.Views.ConnectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,16,0">
            <!-- Header -->
            <TextBlock Text="Connector" FontSize="24" FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>

            <!-- ========== GATEWAY SECTION ========== -->
            <TextBlock Text="ðŸ”— GATEWAY CONNECTION" FontWeight="Bold" FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Gateway List -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MinHeight="150"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Saved Gateways" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding Gateways}" 
                                 SelectedItem="{Binding SelectedGateway}"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="ðŸ”— Connect" Command="{Binding ConnectCommand}"/>
                                    <MenuItem Header="ðŸ§ª Test Connection" Command="{Binding TestConnectionCommand}"/>
                                    <MenuItem Header="ðŸ”Œ Disconnect" Command="{Binding DisconnectCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="â­ Set as Default" Command="{Binding SetAsDefaultCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="ðŸ—‘ï¸ Delete" Command="{Binding RemoveGatewayCommand}"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                                <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text=" â­" Foreground="{StaticResource WarningBrush}"
                                                               Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Url}" FontSize="12" 
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" Text="{Binding Latency, StringFormat='{}{0}ms'}" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Grid.Row="1" Text="No gateways configured. Add one to get started."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding Gateways.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- Add Gateway Panel -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Add Gateway" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <TextBlock Text="Name" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewGatewayName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                        <TextBlock Text="Gateway URL" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewGatewayUrl, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                        <TextBlock Text="Token" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="TokenBox" Style="{StaticResource OpenClawPasswordBoxStyle}" Margin="0,0,0,16"
                                     PasswordChanged="TokenBox_PasswordChanged"/>

                        <Button Content="âž• Add Gateway" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding AddGatewayCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="ðŸ”—" Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding ConnectCommand}" ToolTip="Connect" Margin="0,0,4,0" Padding="12,6"
                                    IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}"/>
                            <Button Content="ðŸ§ª" Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding TestConnectionCommand}" ToolTip="Test" Margin="0,0,4,0" Padding="12,6"
                                    IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}"/>
                            <Button Content="ðŸ”Œ" Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding DisconnectCommand}" ToolTip="Disconnect" Margin="0,0,4,0" Padding="12,6"
                                    IsEnabled="{Binding SelectedGateway.IsConnected}"/>
                            <Button Content="ðŸ—‘ï¸" Style="{StaticResource DangerButtonStyle}" 
                                    Command="{Binding RemoveGatewayCommand}" ToolTip="Remove" Padding="12,6"
                                    IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Status Message -->
            <TextBlock Text="{Binding GatewayStatusMessage}" Margin="0,0,0,24" FontWeight="SemiBold"
                       Visibility="{Binding GatewayStatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGatewayStatusError}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- ========== NODE SERVICE SECTION ========== -->
            <TextBlock Text="âš™ï¸ NODE SERVICE" FontWeight="Bold" FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="OpenClaw Node Service" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Ellipse Width="10" Height="10" Margin="12,0,0,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsServiceInstalled}" Value="True"/>
                                                    <Condition Binding="{Binding IsServiceRunning}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ServiceStatus}" Margin="6,0,0,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Text="The Windows Service keeps the Node connection active even when this app is closed." 
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Display Name:" Foreground="{StaticResource TextSecondaryBrush}" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding ServiceDisplayName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource OpenClawTextBoxStyle}" Width="200"
                                     IsEnabled="{Binding IsServiceInstalled, Converter={StaticResource InverseBoolConverter}}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" MinWidth="150">
                        <Button Content="ðŸ“¥ Install Service" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding InstallServiceCommand}" Margin="0,0,0,8"
                                Visibility="{Binding IsServiceInstalled, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        
                        <StackPanel Visibility="{Binding IsServiceInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="â–¶ï¸ Start" Style="{StaticResource PrimaryButtonStyle}" 
                                    Command="{Binding StartServiceCommand}" Margin="0,0,0,8"
                                    Visibility="{Binding IsServiceRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            
                            <Button Content="â¹ï¸ Stop" Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding StopServiceCommand}" Margin="0,0,0,8"
                                    Visibility="{Binding IsServiceRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <Button Content="ðŸ”„ Restart" Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding RestartServiceCommand}" Margin="0,0,0,8"
                                    Visibility="{Binding IsServiceRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <Button Content="ðŸ—‘ï¸ Uninstall" Style="{StaticResource DangerButtonStyle}" 
                                    Command="{Binding UninstallServiceCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== REMOTE HOSTS SECTION ========== -->
            <TextBlock Text="ðŸ–¥ï¸ REMOTE HOSTS" FontWeight="Bold" FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

            <Grid MinHeight="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Hosts List -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="Hostname" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            <TextBlock Grid.Column="2" Text="Status" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            <TextBlock Grid.Column="3" Text="Agent" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                        </Grid>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding Hosts}" 
                                 SelectedItem="{Binding SelectedHost}"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" FontSize="16" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="âšª"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Online">
                                                            <Setter Property="Text" Value="ðŸŸ¢"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                            <Setter Property="Text" Value="ðŸ”´"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Hostname}" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Username, StringFormat='User: {0}'}" FontSize="11" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Status}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="3" Text="{Binding AgentVersion, TargetNullValue='-'}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding Hosts.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <TextBlock Text="ðŸ–¥ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="No remote hosts configured" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Add Host Panel -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Add Host" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <TextBlock Text="Hostname / IP" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewHostname, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                        <TextBlock Text="Username" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                        <TextBlock Text="Password" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <PasswordBox Style="{StaticResource OpenClawPasswordBoxStyle}" Margin="0,0,0,12"/>

                        <CheckBox Content="Use WinRM" IsChecked="{Binding UseWinRM}" 
                                  Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <Button Content="âž• Add Host" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding AddHostCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                        <Button Content="ðŸš€ Deploy Agent" Style="{StaticResource SecondaryButtonStyle}" 
                                Command="{Binding DeployToHostCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                IsEnabled="{Binding SelectedHost, Converter={StaticResource NullToBoolConverter}}"/>

                        <Button Content="ðŸ—‘ï¸ Remove" Style="{StaticResource DangerButtonStyle}" 
                                Command="{Binding RemoveHostCommand}" HorizontalAlignment="Stretch"
                                IsEnabled="{Binding SelectedHost, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Deployment Status -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" 
                    Padding="12" Margin="0,16,0,0"
                    Visibility="{Binding DeploymentStatus, Converter={StaticResource StringToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦ " FontSize="14"/>
                    <TextBlock Text="{Binding DeploymentStatus}" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
