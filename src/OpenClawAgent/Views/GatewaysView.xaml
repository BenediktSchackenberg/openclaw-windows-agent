<UserControl x:Class="OpenClawAgent.Views.GatewaysView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Gateway Connections" FontSize="24" FontWeight="Bold" 
                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Gateway List -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Saved Gateways" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Gateways}" 
                             SelectedItem="{Binding SelectedGateway}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding ConnectCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE703;" FontFamily="{StaticResource IconFont}" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="Connect"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem Command="{Binding TestConnectionCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8C8;" FontFamily="{StaticResource IconFont}" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="Test Connection"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem Command="{Binding DisconnectCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8CD;" FontFamily="{StaticResource IconFont}" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="Disconnect"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Command="{Binding SetAsDefaultCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE735;" FontFamily="{StaticResource IconFont}" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="Set as Default"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Command="{Binding RemoveGatewayCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE74D;" FontFamily="{StaticResource IconFont}" FontSize="12" Margin="0,0,8,0"/>
                                            <TextBlock Text="Delete"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Indicator -->
                                        <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="{StaticResource TextSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <!-- Gateway Info -->
                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" 
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text="&#xE735;" FontFamily="{StaticResource IconFont}" FontSize="12"
                                                           Foreground="{StaticResource WarningBrush}" Margin="6,0,0,0"
                                                           Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Url}" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Latency -->
                                        <TextBlock Grid.Column="2" Text="{Binding Latency, StringFormat='{}{0}ms'}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock Grid.Row="1" Text="No gateways configured. Add one to get started."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding Gateways.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Add/Edit Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Add Gateway" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <TextBlock Text="Name" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewGatewayName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                    <TextBlock Text="Gateway URL" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewGatewayUrl, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource OpenClawTextBoxStyle}" Margin="0,0,0,12"/>

                    <TextBlock Text="Token" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="TokenBox" Style="{StaticResource OpenClawPasswordBoxStyle}" Margin="0,0,0,16"
                                 PasswordChanged="TokenBox_PasswordChanged"/>

                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                            Command="{Binding AddGatewayCommand}" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Add Gateway"/>
                        </StackPanel>
                    </Button>

                    <!-- Selected Gateway Actions -->
                    <Separator Margin="0,20" Background="{StaticResource AccentBrush}"/>

                    <TextBlock Text="Selected Gateway" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                            Command="{Binding ConnectCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                            IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE703;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Connect"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding TestConnectionCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                            IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8C8;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Test Connection"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding DisconnectCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                            IsEnabled="{Binding SelectedGateway.IsConnected}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8CD;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Disconnect"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding SetAsDefaultCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                            IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE735;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Set as Default"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding RemoveGatewayCommand}" HorizontalAlignment="Stretch"
                            IsEnabled="{Binding SelectedGateway, Converter={StaticResource NullToBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="{StaticResource IconFont}" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Remove"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <StackPanel>
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Margin="0,0,0,8"
                           FontWeight="SemiBold"
                           Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStatusError}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE82F;" FontFamily="{StaticResource IconFont}" FontSize="14" 
                               Foreground="{StaticResource PrimaryBrush}" Margin="0,0,6,0"/>
                    <TextBlock Text="Tip: " Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold"/>
                    <TextBlock Text="Gateway URL format: http://localhost:18789 or https://your-gateway.example.com" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
