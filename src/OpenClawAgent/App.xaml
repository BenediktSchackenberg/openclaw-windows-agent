<Application x:Class="OpenClawAgent.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:OpenClawAgent.Converters"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/OpenClawTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            
            <!-- System Tray Context Menu -->
            <ContextMenu x:Key="TrayContextMenu">
                <MenuItem Header="Open OpenClaw Agent" FontWeight="Bold" Click="TrayMenu_Open_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8A7;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Dashboard" Click="TrayMenu_Dashboard_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE80F;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Connector" Click="TrayMenu_Connector_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE703;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="TrayMenuConnectionStatus" Header="Status: Disconnected" IsEnabled="False">
                    <MenuItem.Icon>
                        <Ellipse Width="10" Height="10" Fill="#6B7280"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="TrayMenu_Exit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7E8;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </Application.Resources>
</Application>
